{% extends '_base.twig' %}


{% block title %}Generic Hipster Coffee{% endblock %}

    <body>
{% block content %}
        <main class="container">
            <h1 class="text-uppercase">Generic Hipster Coffee</h1>
            <p class="h2 text-uppercase">Specialty coffee, fresh food &#38; local community.</p>
            <img src="img/counter.jpg" alt="coffee shop counter" class="img-fluid" />
            <div class="row">
                <div class="col-sm">
                    <h2 class="text-uppercase">Opening hours</h2>
                    <p>Sunday to Thursday: 8am – 11pm</p>
                    <p>Friday to Saturday: 8am – 1am</p>
                </div>
                <div class="col-sm">
                    <h2 class="text-uppercase">Book a table</h2>
                    <p><a href="tel:+14153214567">Call +1 415-321-4567</a></p>
                </div>
                <div class="col-sm">
                    <h2 class="text-uppercase">Address</h2>
                    <p>321 Ivy St.<br />San Francisco, CA 94102</p>
                </div>
            </div>
            <div class="embed-responsive embed-responsive-16by9">
                <div class="embed-responsive-item" id="map"></div>
            </div>


        <script>
            function initMap() {
                var ivySt = { lat: 37.777298, lng: -122.423454 };
                var map = new google.maps.Map(document.getElementById("map"), { zoom: 16, center: ivySt });
                var marker = new google.maps.Marker({ position: ivySt, map: map });
            }
        </script>

        <script
            async
            defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDd1MDV7YL_ruIZgSTk_buouK8KiPXVuVA&callback=initMap"
        ></script>
        </main>
{% endblock %}

    </body>
</html>
